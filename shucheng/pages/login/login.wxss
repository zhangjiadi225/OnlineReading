.login {
  width: 750rpx;
  height: 100vh;
  background-color: #E5E5E5;
}
.login .container {
  margin: 0 50rpx 0 50rpx;
}
.login .container .top {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 42rpx;
  width: 650rpx;
  height: 240rpx;
}
.login .container .top .input {
  display: flex;
  align-items: center;
  background-color: white;
  border: 1px solid white;
  border-radius: 50rpx;
  height: 90rpx;
  width: 650rpx;
}
.login .container .top .input input {
  margin-left: 20rpx;
}
.login .container .top .input .icon {
  margin-left: 20rpx;
}
.login .container .singin {
  text-align: right;
  margin: 20rpx 0 60rpx 0;
  font-size: 36rpx;
  color: #adadad;
}
.login .container .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 500rpx;
  height: 110rpx;
  background-color: #701C12;
  border-radius: 50rpx;
  margin: 0 auto;
  box-shadow: 0px 3px 3px #701C12;
}
